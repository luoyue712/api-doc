{
  "compilerOptions": {
    "incremental": false,
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node16",
    "lib": ["ES2020", "DOM","DOM.Iterable"],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "types": [
      "vite-plugin-pwa/client",
      "vite/client"
    ]
  },
  "include": [
    "**/*.ts",
    "**/*.d.ts",
    "**/*.vue"
  ]
}
